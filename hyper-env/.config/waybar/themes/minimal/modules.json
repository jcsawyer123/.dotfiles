
{
    // Workspaces
    "hyprland/workspaces" : {
        "format": "{name}",
        "on-click": "activate",
        "active-only": false,
        "all-outputs": false,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },


    /////////////////////////////////////////////
    // CUSTOMS
    /////////////////////////////////////////////
      
        
      "custom/lock": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/hypr/core/lockscreen",
        "tooltip": false,
      },
      
      "custom/mic": {
        "format": "{}",
        "return-type": "json",
        "interval": 1,
        "exec": "~/.dotfiles/scripts/hypr/bar/micUsed.py",
        "tooltip": "true",
        "exec-if": "~/.dotfiles/scripts/hypr/bar/micUsed.py -c > /dev/null 2>&1"
      },
      
      
      "custom/menu": {
        "format": "",
        "tooltip": false,
        "on-click": "$HOME/.dotfiles/scripts/hypr/core/menu",
        "on-click-right": "$HOME/.dotfiles/scripts/hypr/appearance/layout-switcher",
        "on-click-middle": "~/.dotfiles/scripts/hypr/appearance/changeWallpaper",
       
      },
        
      // Old Updater 
      "custom/updater":{
        "format": " {}",
        "exec": "checkupdates | wc -l",
        "exec-if": "[[ $(checkupdates | wc -l) ]]",
        "interval": 15,
        "on-click": "foot -T update paru -Syu || yay -Syu && notify-send 'The system has been updated'",
      },
      
      


    // NEW 
    /////////////////////////////////////////////

    // Cliphist
    "custom/cliphist": {
        "format": "",
        "on-click": "sleep 0.1 && ~/.dotfiles/scripts/waybar/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/.dotfiles/scripts/waybar/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.dotfiles/scripts/waybar/cliphist.sh w",
        "tooltip": false
    },

    // Updates Count
    "custom/updates": {
        "format": "  {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",       
        "exec": "~/.dotfiles/scripts/waybar/updates.sh",
        "restart-interval": 60,
        "on-click": "foot -e ~/.dotfiles/scripts/waybar/installupdates.sh",
        "on-click-right": "~/.dotfiles/scripts/waybar/helpers/software.sh",
        "tooltip": false
    },
    
    // Wallpaper
    "custom/wallpaper": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/hypr/appearance/wallpaper.sh select",
        "on-click-right": "~/.dotfiles/scripts/hypr/appearance/scripts/wallpaper.sh",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/waybar/themeswitcher.sh",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    // System tray
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    "temperature": {
        "interval": 10,
        "tooltip": false,
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        //"thermal-zone": 0,
        "critical-threshold": 82,
        "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": [""],
        "on-click-right": "foot --title btop sh -c 'btop'"
      },

    // Clock
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        // START CLOCK FORMAT
        "format-alt": "{:%Y-%m-%d}"
        // END CLOCK FORMAT
    },

    // System
    "custom/system": {
        "format": "",
        "tooltip": false
    },

    // CPU
    "cpu": {
        "format": "{usage}% 󰍛",  
        "interval": 1,
        "format-alt-click": "click",
        "format-alt": "{icon0}{icon1}{icon2}{icon3} {usage:>2}% 󰍛",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
        "on-click": "foot -e htop"
    },

    // Memory
    "memory": {
        "interval": 10,
        "format": "{used:0.1f}G 󰾆 ",
        "format-alt": "󰾆 {percentage}%",
        "format-alt-click": "click",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}GB/{total:0.1f}G",
        "on-click-right": "foot --title btop sh -c 'btop'"
      },

    // Harddisk space used
    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "foot -e htop"
    }, 

    "hyprland/language": {
        "format": "/ K {short}"
    },

    "wireplumber": {
        "format": "{icon} {volume} %",
        "format-muted": " Mute",
        "on-click": "~/.dotfiles/scripts/hypr/bar/volume --toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/scripts/hypr/bar/volume --inc",
        "on-scroll-down": "~/.dotfiles/scripts/hypr/bar/volume --dec",
        "format-icons": ["", "", ""],
      },
        

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "{essid}  ",
        "format-ethernet": " Wired",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip-format": "{ipaddr}  {bandwidthUpBytes}  {bandwidthDownBytes}",
        "format-linked": " {ifname} (No IP)",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": " Disconnected",
        "max-length": 50,
        "on-click": "~/.dotfiles/scripts/waybar/helpers/networkmanager.sh"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}   {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "]
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon} ",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
        "default": ["", "", ""],
        "ignored-sinks": ["Easy Effects Sink"],
      },
        "scroll-step": 5.0,
        "on-click": "~/.dotfiles/scripts/hypr/bar/volume --toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/scripts/hypr/bar/volume --inc",
        "on-scroll-down": "~/.dotfiles/scripts/hypr/bar/volume --dec",
        "smooth-scrolling-threshold": 1,
      },
        
      "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "",
        "format-source-muted": "",
        "on-click": "~/.dotfiles/scripts/hypr/bar/volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/scripts/hypr/bar/volume --mic-inc",
        "on-scroll-down": "~/.dotfiles/scripts/hypr/bar/volume --mic-dec",
        "scroll-step": 5,
      },
      
      "pulseaudio#source": {
        "format": "{icon}",
        "format-bluetooth": "{icon} ",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
        "default": ["", "", ""],
        "ignored-sinks": ["Easy Effects Sink"],
      },
        "scroll-step": 5.0,
        "on-click": "~/.dotfiles/scripts/hypr/bar/volume --toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/scripts/hypr/bar/volume --inc",
        "on-scroll-down": "~/.dotfiles/scripts/hypr/bar/volume --dec",
        "smooth-scrolling-threshold": 1,
      },


    // Bluetooth
    "bluetooth": {
        "format": " {status}",
        "format-disabled": "",
        "format-connected": " {num_connections}",
        "format-off": "",
        "tooltip-format": " {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias}",
        "interval": 30,
        "on-click": "blueman-manager"
    },

    "cava": {
        //"cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
        "framerate": 60,
        "autosens": 1,
        "sensitivity": 100,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons" : ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
        "actions": {
            "on-click-right": "mode"
                   }
      },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    },

    // Idle Inhibator
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons":{
            "activated": "",
            "deactivated": ""
        },
        "on-click-right": "swaylock"        
    }
}
